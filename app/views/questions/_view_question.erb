<!-- expect local variable question -->
<!-- requires action path to be filled in by whoever writes controller -->
<div class=".question"
  <form method="post" action="/test">
    <p><%= question.text %>
      <% if creatorAccess?(question) %>
      <a href="/questions/<%= question.id %>">delete question</a>
      <% end %>
    </p>
    <div class="choices">
      <% question.choices.each do |choice| %>
        <input type="radio" name="<%= question.id %>" value="<%= choice.id %>"/>
        <span class="question-choice"> <%= choice.text %></span>
        <% if creatorAccess?(question) %>
          <div>
            <a class"delete-choice" href="/choices/<%= choice.id %>">delete choice</a>
          </div>
        <% end %>
        <br>
      <% end %>
    </div>
  </form>
</div>
