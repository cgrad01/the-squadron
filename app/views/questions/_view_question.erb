<!-- expect local variable question -->
<!-- requires action path to be filled in by whoever writes controller -->
<div class=".question"
  <form method="post" action="/test">
    <p><%= question.text %></p>
    <div class="choices">
      <% question.choices.each do |choice| %>
        <input type="radio" name="<%= question.id %>" value="<%= choice.id %>"/> <span class="question-choice"> <%= choice.text %></span> <br>
      <% end %>
    </div>
  </form>
</div>
